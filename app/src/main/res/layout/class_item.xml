<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small_size"
    app:cardBackgroundColor="@color/card_view_color"
    app:cardCornerRadius="@dimen/card_radius_corner"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:layout_marginEnd="@dimen/margin_normal_size"
            android:text="@string/none_data"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_class_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginTop="4dp"
            android:text="@string/none_data"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_class_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_student_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_size"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/margin_normal_size"
            android:text="@string/no_student"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_class_grade" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_class_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/none_data"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_class_name"
            app:layout_constraintStart_toStartOf="@+id/tv_class_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_class_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
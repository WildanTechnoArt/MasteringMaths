<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_assig_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/profile_placeholder"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="@string/none_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_assig_username"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_assig_profile"
                app:layout_constraintTop_toTopOf="@+id/img_assig_profile"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_assig_menu"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="@string/none_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_assig_id"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_assig_profile"
                app:layout_constraintTop_toBottomOf="@+id/tv_assig_username"
                android:textSize="13sp"/>

        <TextView
                android:text="@string/none_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tv_assignment_title"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img_assig_profile"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        <View android:id="@+id/line"
              android:layout_width="match_parent"
              android:background="@color/colorGrey"
              android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/btn_view_assignment"
              android:layout_marginTop="12dp"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_like_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:id="@+id/btn_assig_like"
                android:background="@color/colorWhite"
                app:layout_constraintEnd_toStartOf="@+id/btn_assig_comment"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                android:contentDescription="@string/gambar"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_insert_comment_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp"
                android:id="@+id/btn_assig_comment"
                android:background="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_assig_like"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/line"
                android:contentDescription="@string/gambar"/>

        <ImageButton
                android:id="@+id/btn_assig_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_overflow_24dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/button_hover"
                app:layout_constraintTop_toTopOf="@+id/img_assig_profile"
                android:contentDescription="@string/item_menu"/>

        <TextView
                android:text="@string/none_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_assignment_desc"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_assignment_title"/>

        <Button
                android:id="@+id/btn_view_assignment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/button_hover_primary_dark"
                android:elevation="6dp"
                android:text="@string/view_assignment"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                tools:targetApi="lollipop"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_assignment_desc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
            android:layout_marginRight="@dimen/margin_small_size"
            app:cardBackgroundColor="@color/card_view_color"
            app:cardCornerRadius="@dimen/card_radius_corner"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintEnd_toStartOf="@+id/card_referensi"
            app:layout_constraintStart_toStartOf="@+id/card_fungsi"

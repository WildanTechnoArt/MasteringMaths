            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginLeft="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_big_size"
            android:layout_marginEnd="@dimen/margin_small_size"
            android:layout_marginRight="@dimen/margin_small_size"
            app:cardBackgroundColor="@color/card_view_color"
            app:cardCornerRadius="@dimen/card_radius_corner"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintEnd_toStartOf="@+id/card_indikator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/menu_pembelajaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_pembelajaran"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_pembelajaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/card_kompetensi_dasar"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_indikator"

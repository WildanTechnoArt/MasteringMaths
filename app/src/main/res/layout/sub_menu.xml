            app:cardCornerRadius="@dimen/card_radius_corner"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintEnd_toStartOf="@+id/card_2"
            app:layout_constraintStart_toStartOf="@+id/card_sejarah"

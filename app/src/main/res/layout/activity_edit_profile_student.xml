<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".student.activity.EditProfileStudentActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:title="@string/edit_profil"
                tools:targetApi="lollipop" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_very_big_size"
                    android:layout_marginEnd="@dimen/margin_very_big_size"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nomor_nisn"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/input_nisn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:autofillHints="@string/nomor_nip"
                        android:background="@drawable/input_layout"
                        android:hint="@string/nomor_nip"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/full_name"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:autofillHints="@string/full_name"
                        android:background="@drawable/input_layout"
                        android:hint="@string/full_name"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/alamat_email"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:autofillHints="@string/email_address"
                        android:background="@drawable/input_layout"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                <TextView
                        android:id="@+id/tv_email_autentikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:text="@string/txt_email_autentikasi"
                        android:textSize="12sp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/nama_kota"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/input_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:autofillHints="@string/email_address"
                        android:background="@drawable/input_layout"
                        android:hint="@string/nama_kota"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/user_phone"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                <EditText
                        android:id="@+id/input_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:autofillHints="@string/email_address"
                        android:background="@drawable/input_layout"
                        android:hint="@string/user_phone"
                        android:inputType="text|phone"
                        android:padding="12dp"
                        android:textSize="16sp"
                        tools:targetApi="o" />

                <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_normal_size"
                        android:layout_marginBottom="@dimen/margin_small_size"
                        android:background="@drawable/button_hover_primary_dark"
                        android:elevation="6dp"
                        android:text="@string/btn_simpan"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:targetApi="lollipop" />

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
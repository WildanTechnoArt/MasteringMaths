<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".teacher.activity.SettingClassActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:elevation="6dp"
                app:title="Pengaturan Kelas"
                tools:targetApi="lollipop"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_normal_size">

            <TextView
                    android:text="@string/akses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_margin="4dp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="4dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin_normal_size">

                    <TextView
                            android:text="@string/use_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>

                    <TextView
                            android:text="@string/none_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_user_id"
                            android:layout_marginTop="2dp"/>

                    <Button
                            android:text="@string/salin"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/btn_copy_id"
                            android:layout_gravity="end"
                            android:textAllCaps="false"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/button_transparant_hover"/>

                    <TextView
                            android:text="@string/kode_kelas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/margin_small_size"/>

                    <TextView
                            android:text="@string/none_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_class_code"
                            android:layout_marginTop="2dp"/>

                    <Button
                            android:text="@string/salin"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/btn_copy_class"
                            android:layout_gravity="end"
                            android:background="@drawable/button_transparant_hover"
                            android:textAllCaps="false"
                            android:layout_marginTop="4dp"/>

                    <TextView
                            android:text="@string/text_access_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_marginTop="@dimen/margin_normal_size"
                            android:textAlignment="center"
                            android:textSize="12sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:text="@string/profil_kelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="16dp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                >

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/class_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:counterEnabled="false"
                            android:layout_marginStart="@dimen/margin_normal_size"
                            android:layout_marginEnd="@dimen/margin_normal_size"
                            android:layout_marginTop="@dimen/margin_normal_size">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_class_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nama_kelas"
                                android:enabled="false"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textColor="#FF4D4D4D"
                                android:textSize="15sp"
                                android:text="@string/none_data"
                                android:focusable="false"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                            android:text="@string/jenjang_pendidikan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_school_grade"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" android:layout_marginStart="@dimen/margin_normal_size"
                            android:layout_marginEnd="@dimen/margin_normal_size"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp"
                            android:id="@+id/spinner_grade"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/margin_normal_size"
                            android:layout_marginEnd="@dimen/margin_normal_size">

                        <Spinner
                                android:id="@+id/sp_level_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:entries="@array/grade_level_list"/>

                        <Spinner
                                android:id="@+id/sp_class_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                android:entries="@array/junior_high_school"/>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/class_grade_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:counterEnabled="false"
                            android:layout_marginTop="8dp" android:layout_marginStart="@dimen/margin_normal_size"
                            android:layout_marginEnd="@dimen/margin_normal_size">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/class_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/jenjang_pendidikan"
                                android:enabled="false"
                                android:textSize="15sp"
                                android:inputType="text"
                                android:textColor="#FF4D4D4D"
                                android:focusable="false"
                                android:text="@string/none_data"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                            android:text="@string/edit_kelas"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/btn_edit_class"
                            android:background="@drawable/button_transparant_hover"
                            android:textAllCaps="false"
                            android:layout_marginTop="8dp" android:layout_marginStart="@dimen/margin_normal_size"
                            android:layout_marginEnd="@dimen/margin_normal_size"
                            android:layout_marginBottom="@dimen/margin_normal_size"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                    android:id="@+id/btn_delete_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_hover_primary_dark"
                    android:elevation="6dp"
                    android:text="@string/hapus_kelas"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    tools:targetApi="lollipop"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>